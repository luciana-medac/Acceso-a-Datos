<hibernate-mapping>
    <!-- El nombre de la clase y en table es el nombre de la tabla a crear en SQL -->
    <class name="com.example.demo.Restaurante" table="Restaurante">
        <meta attribute="class-description">
            <!-- Clase que almacena informaciÃ³n de clientes -->
        </meta>

        <!-- indica que es clave principal nombre: el que le hayamos dado en la clase java, 
                        type: tipo de dato y column: nombre de la columna en SQL -->
        <id name="id" type="int" column="id_restaurante">
            <generator class="native"/>
        </id>

        <property name="nombre" column="Nombre Restaurante" type="string"/>

    </class>
</hibernate-mapping>