<hibernate-mapping>
    <!-- El nombre de la clase y en table es el nombre de la tabla a crear en SQL -->
    <class name="com.example.demo.ServicioExtra" table="Servicio_Extra">
        <meta attribute="class-description">
            <!-- Clase que almacena información de clientes -->
        </meta>

        <!-- indica que es clave principal nombre: el que le hayamos dado en la clase java, 
                        type: tipo de dato y column: nombre de la columna en SQL -->
        <id name="id" type="int" column="id_SerEx">
            <generator class="native"/>
        </id>

        <property name="nombre" column="Nombre Servicio" type="string"/>

        <!-- Relación muchos-a-muchos (lado inverso) -->
        <set name="reservas" table="Reserva_ServicioExtra" inverse="true">
            <key column="id_servicio"/> <!-- FK hacia ServicioExtra -->
            <many-to-many class="com.example.demo.Reserva" column="id_reserva"/>
        </set>

    </class>
</hibernate-mapping>