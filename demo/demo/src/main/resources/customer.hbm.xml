<hibernate-mapping>
    <!-- El nombre de la clase y en table es el nombre de la tabla a crear en SQL -->
    <class name="com.example.demo.Customer" table="Cliente">
        <meta attribute="class-description">
            <!-- Clase que almacena informaciÃ³n de clientes -->
        </meta>

        <!-- indica que es clave principal nombre: el que le hayamos dado en la clase java, 
                        type: tipo de dato y column: nombre de la columna en SQL -->
        <id name="id" type="int" column="id_cliente">
            <generator class="native"/>
        </id>

        <property name="firstName" column="Nombre" type="string"/>
        <property name="lastName" column="Apellido" type="string"/>
    </class>
</hibernate-mapping>